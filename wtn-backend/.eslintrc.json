{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "no-unused-vars": "warn",
    "import/prefer-default-export": "off",
    "no-underscore-dangle": "off",
    "import/extensions": [
      "error",
      {
        "js": "always",
        "jsx": "always",
        "ts": "always",
        "tsx": "always",
        "json": "always"
      }
    ]
  }
}
